// Main Sidebar Container
html
  head
  body
    aside.main-sidebar.sidebar-dark-primary.elevation-4
      // Brand Logo
      a.brand-link(href='static/index3.html')
        img.brand-image.img-circle.elevation-3(src='static/viewsOld/img/logo.jpg', alt='AdminLTE Logo', style='opacity: .8')
        |       
        span.brand-text.font-weight-light አምደ ተዋሕዶ
      // Sidebar
      .sidebar
        // Sidebar user (optional)
        .user-panel.mt-3.pb-3.mb-3.d-flex
          .image
            img.img-circle.elevation-2(src='static/dist/img/user2-160x160.jpg', alt='User Image')
          |         
          .info
            a.d-block(href='/profile') #{name}
        // Sidebar Menu
        nav.mt-2
          ul.nav.nav-pills.nav-sidebar.flex-column(data-widget='treeview', role='menu', data-accordion='false')
            //
              Add icons to the links using the .nav-icon class
              with font-awesome or any other icon font library
            each val in work   
              li.nav-item.has-treeview.menu.open
                     
                a(href="#").nav-link.active
                  i.nav-icon.fas.fa-tachometer-alt
                  p=val.department 
                    i.right.fas.fa-angle-left
                ul(style="display: block;").nav.nav-treeview 
                  if val.subDepartment.length > 1
                    each val2 in val.subDepartment
                      if val2.sd_id == 1 & val2.active == true
                        each val3 in val.subDepartment
                          if val3.parent == 1
                            li.nav-item
                              a(href=val3.link, id=val3.sd_id).nav-link
                                i.far.fa-circle.nav-icon
                                p=val3.name
                      if val2.sd_id == 1 & val2.active == false
                        each val3 in val.subDepartment
                          if val3.active == true
                              li.nav-item
                                a(href=val3.slink, id=val3.sd_id).nav-link
                                  i.far.fa-circle.nav-icon
                                  p=val3.name
                      
                                
            li.nav-item
              a.nav-link(href='/logout')
                i.fas.fa-circle.nav-icon
                |               
                p Log out
            |           
        // /.sidebar-menu
      // /.sidebar
